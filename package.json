{
  "name": "chu-tools-client",
  "version": "1.0.0",
  "description": "Front-end Stack with Pug, Webpack, Babel, ES2016, Jest",
  "author": "Gairal",
  "readmeFilename": "README.md",
  "main": "src/app/index.tsx",
  "repository": {
    "type": "git",
    "url": "git@github.com:gairal/chu-tools-client.git"
  },
  "license": "MIT",
  "keywords": [
    "Front-end",
    "Pug",
    "css",
    "JavaScript",
    "Webpack",
    "Typescript",
    "es6",
    "es2015",
    "jest"
  ],
  "scripts": {
    "start": "npx webpack-dev-server --config ./webpack/webpack.config.js",
    "debug": "npx webpack-dev-server --config ./webpack/webpack.config.debug.js",
    "build": "npx webpack --config ./webpack/webpack.config.js",
    "release": "npx webpack --config ./webpack/webpack.config.prod.js",
    "lint": "npx tslint './src/app/**/*.{ts,tsx}' --project tsconfig.json && ./node_modules/.bin/tslint ./test/ --project tsconfig.json && ./node_modules/.bin/stylelint './src/**/*.js'",
    "test": "npm run lint",
    "format": "npx prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5",
    "@commitlint/config-conventional": "^7.5",
    "@types/history": "^4.7",
    "@types/node": "^11.11",
    "@types/query-string": "^6.3",
    "@types/react": "^16.8",
    "@types/react-dom": "^16.8",
    "@types/react-redux": "^7.0",
    "@types/react-router-dom": "^4.3",
    "@types/redux-actions": "^2.3",
    "@types/styled-components": "^4.1",
    "autoprefixer": "^9.5",
    "awesome-typescript-loader": "^5.2",
    "clean-webpack-plugin": "^2.0",
    "copy-webpack-plugin": "^5.0",
    "file-loader": "^3.0",
    "html-webpack-plugin": "^3.2",
    "husky": "^1.3",
    "imagemin-webpack-plugin": "^2.4",
    "prettier": "^1.16",
    "pug": "^2.0",
    "pug-loader": "^2.4",
    "stylelint": "^9.10",
    "stylelint-config-rational-order": "^0.0",
    "stylelint-config-recommended": "^2.1",
    "stylelint-config-styled-components": "^0.1",
    "stylelint-order": "^2.1",
    "stylelint-processor-styled-components": "^1.5",
    "stylelint-selector-bem-pattern": "^2.0",
    "tslint": "^5.14",
    "tslint-config-airbnb": "^5.11",
    "tslint-config-prettier": "^1.18",
    "tslint-loader": "^3.5",
    "tslint-react": "^3.6",
    "typescript": "^3.3",
    "uglifyjs-webpack-plugin": "^2.1",
    "webpack": "^4.29",
    "webpack-cli": "^3.3",
    "webpack-dev-server": "^3.2",
    "write-file-webpack-plugin": "^4.5"
  },
  "dependencies": {
    "connected-react-router": "^6.3",
    "es6-promise": "^4.2",
    "firebase": "^5.9",
    "history": "^4.9",
    "query-string": "^6.4",
    "react": "^16.8",
    "react-bar-loader": "^1.0",
    "react-dom": "^16.8",
    "react-firebaseui": "^3.1",
    "react-hot-loader": "^4.8",
    "react-redux": "^6.0",
    "react-router": "^4.4",
    "react-router-dom": "^4.4",
    "redux": "^4.0",
    "redux-saga": "^1.0",
    "styled-components": "^4.1",
    "styled-normalize": "^8.0",
    "typesafe-actions": "^3.2",
    "whatwg-fetch": "^3.0"
  }
}
